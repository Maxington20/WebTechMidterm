@model IEnumerable<Clubs.Models.Club>

@{
    ViewData["Title"] = "Club Listing";
}

<h2>Club Listing</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
            <th>
                @*@Html.DisplayNameFor(model => model.StyleCodeNavigation.Name)*@
                Style
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StyleCodeNavigation.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClubId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClubId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClubId">Delete</a> |
                <a asp-action="Index" asp-route-clubID="@item.ClubId" 
                   asp-route-clubName="@item.Name" asp-controller="MHContracts" asp-route-clubStyle="@item.StyleCode">Contracts</a>

            </td>
        </tr>
}
    </tbody>
</table>
